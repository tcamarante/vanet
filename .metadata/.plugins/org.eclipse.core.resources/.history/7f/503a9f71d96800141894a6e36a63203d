package vanet.alert

import grails.transaction.Transactional

@Transactional
class AlertService {

	def broadcastService
	
    def alertReceive(Alert alert) {
		Alert redundantAlert = Alert.findByCode(alert.code)
		if(!redundantAlert){
			alert.save(flush:true)
			broadcastService.sendAlertWhileNear(alert)
		}
    }
}
